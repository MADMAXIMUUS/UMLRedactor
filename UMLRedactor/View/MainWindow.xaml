<Window x:Class="UMLRedactor.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lines="clr-namespace:UMLRedactor.Tools.Lines"
        xmlns:activityDiagram="clr-namespace:UMLRedactor.Tools.Elements.ActivityDiagram"
        mc:Ignorable="d"
        AllowDrop="True"
        Title="Редактор" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="0,0,0,1" BorderBrush="Black">
            <MenuItem Header="File">
                <MenuItem Header="New" />
                <MenuItem Header="Open" />
                <MenuItem Header="Save" />
                <MenuItem Header="Save as.." />
                <MenuItem Header="Export as PNG" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo" />
                <MenuItem Header="Redo" />
            </MenuItem>
            <MenuItem Header="About" />
        </Menu>
        <TreeView x:Name="TreeView" Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" Width="200" BorderThickness="1,0,0,0"
                  BorderBrush="Black">
            <TextBlock>Диаграмма</TextBlock>
        </TreeView>
        <DataGrid Grid.Row="3" Grid.Column="0" Width="222" BorderThickness="0,1,1,0" BorderBrush="Black">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Свойства" Width="*" />
                <DataGridTextColumn Header="Значения" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Grid.Row="1" Height="25" Grid.Column="0" Width="220" Text="Элементы" FontSize="14" Padding="10,2"
                   Margin="1,1,1,0" />
        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,0,1,0" />
        <Border Grid.Row="1" Grid.Column="0" BorderThickness="0,0,0,1" BorderBrush="Black" />
        <ScrollViewer Grid.Row="2" Grid.Column="0" Width="220">
            <Grid x:Name="ElementsGrid" Width="200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Background="Transparent" BorderThickness="0">
                    <Image Source="../Icons/Class_element_icon.png" Height="70" Width="70" />
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Background="Transparent" BorderThickness="0">
                    <Image Source="../Icons/NoteLink_icon.png" Height="70" Width="70" />
                </Button>
            </Grid>
        </ScrollViewer>
        <ScrollViewer Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto" AllowDrop="True">
            <Canvas x:Name="DrawCanvas" ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto" Width="2000" Height="2000">
                <Canvas.Background>
                    <DrawingBrush TileMode="Tile" Viewport="0,0,100,100"
                                  ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing>
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,100,100" />
                                </GeometryDrawing.Geometry>
                                <GeometryDrawing.Pen>
                                    <Pen Brush="LightSteelBlue" Thickness="1" />
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Canvas.Background>
                <activityDiagram:Decision Canvas.Top="100"/>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>