<Window x:Class="UMLRedactor.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:lines="clr-namespace:UMLRedactor.Tools.Lines"
        mc:Ignorable="d"
        AllowDrop="True"
        Background="Transparent"
        Title="Редактор" Height="600" Width="1000" WindowStyle="None">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Margin="0,0,0,1" Padding="0,10" Grid.ColumnSpan="2" Background="White" BorderThickness="0,0,0,1" BorderBrush="Black" VerticalAlignment="Stretch">
            <MenuItem Header="File" VerticalAlignment="Center">
                <MenuItem Name="ButtonNew"  Header="New" />
                <MenuItem Name="ButtonOpen" Header="Open"/>
                <MenuItem Name="ButtonSave" Header="Save"/>
                <MenuItem Name="ButtonSaveAs" Header="Save as.."/>
                <MenuItem Name="ButtoneEport" Header="Export as PNG"/>
            </MenuItem>
            <MenuItem Header="Edit" VerticalAlignment="Center">
                <MenuItem Name="ButtonUndo" Header="Undo"/>
                <MenuItem Name="ButtonRedo" Header="Redo"/>
            </MenuItem>
            <MenuItem Name="ButtonView" Header="View" VerticalAlignment="Center">
                <MenuItem Header="New" />
                <MenuItem Header="Open" />
                <MenuItem Header="Next" />
                <MenuItem Header="Prev" />
            </MenuItem>
            <MenuItem Name="ButtonAbout" Header="About" VerticalAlignment="Center"/>
        </Menu>
        <Border Margin="0,0,0,1" BorderThickness="0,0,0,1" Grid.Row="0" Grid.Column="2" BorderBrush="Black">
        <StackPanel Orientation="Horizontal" Margin="0,2" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Stretch" Background="White">
            <Separator Width="45" Background="Transparent"/>
            <Border x:Name="SystemButtonTray" CornerRadius="15,0,0,15" MouseEnter="SytemButton_MouseEnter" MouseLeave="SytemButton_MouseLeave" MouseLeftButtonDown="Border_MouseLeftButtonDown" BorderThickness="0" Height="36" Background="WhiteSmoke" Width="50" VerticalAlignment="Center">
                <TextBlock Text="--" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border x:Name="SystemButtonMaximize" BorderThickness="0" Height="36" MouseEnter="SytemButton_MouseEnter" MouseLeave="SytemButton_MouseLeave" Background="WhiteSmoke" Width="50" VerticalAlignment="Center">
                <TextBlock Text="❐" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border x:Name="SystemButtonClose" CornerRadius="0,15,15,0" MouseEnter="SytemButton_MouseEnter" MouseLeave="SytemButton_MouseLeave" Background="WhiteSmoke" BorderThickness="0" Height="36" Width="50" VerticalAlignment="Center">
                <TextBlock Text="X" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            </StackPanel>
        </Border>
        <TreeView x:Name="TreeView" Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" Width="200" BorderThickness="1,0,0,0"
                  BorderBrush="Black">
            <TextBlock>Диаграмма</TextBlock>
        </TreeView>
        <DataGrid Grid.Row="3" Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="Black" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Свойства" Width="*" />
                <DataGridTextColumn Header="Значения" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Grid.Row="1" Background="White" Height="25" Grid.Column="0" Width="220" Text="Элементы" FontSize="14" Padding="10,2"
                   Margin="1,1,1,0" />
        <ScrollViewer Grid.Row="2" Grid.Column="0" Width="220" Background="White" BorderThickness="0,0,1,0">
            <Grid x:Name="ElementsGrid" Width="200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Background="Transparent" BorderThickness="0">
                    <Image Source="../Icons/Class_element_icon.png" Height="70" Width="70" />
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Background="Transparent" BorderThickness="0">
                    <Image Source="../Icons/NoteLink_icon.png" Height="70" Width="70" />
                </Button>
            </Grid>
        </ScrollViewer>
        <ScrollViewer Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto" AllowDrop="True">
            <Canvas x:Name="DrawCanvas" ScrollViewer.CanContentScroll="True" Background="White"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto" Width="2000" Height="2000">
                
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>