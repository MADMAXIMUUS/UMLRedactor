<Window x:Class="UMLRedactor.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:lines="clr-namespace:UMLRedactor.Tools.Lines"
        mc:Ignorable="d"
        AllowDrop="True"
        Background="Transparent"
        Name="MainView"
        Title="Редактор" Height="600" Width="1000" WindowStyle="None">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Padding="0,10" Grid.ColumnSpan="3" Background="White" BorderThickness="0,0,0,1" BorderBrush="Black" VerticalAlignment="Stretch">
            <Separator />
            <MenuItem Header="File" VerticalAlignment="Center">
                <MenuItem Name="ButtonFileNew"  Header="New" />
                <MenuItem Name="ButtonFileOpen" Header="Open"/>
                <MenuItem Name="ButtonFileSave" Header="Save"/>
                <MenuItem Name="ButtonFileSaveAs" Header="Save as.."/>
                <MenuItem Name="ButtonFileExport" Header="Export as PNG"/>
            </MenuItem>
            <MenuItem Header="Edit" VerticalAlignment="Center">
                <MenuItem Name="ButtonEditUndo" Header="Undo"/>
                <MenuItem Name="ButtonEditRedo" Header="Redo"/>
            </MenuItem>
            <MenuItem Name="ButtonView" Header="View" VerticalAlignment="Center">
                <MenuItem Name="ButtonViewNew" Header="New" />
                <MenuItem Name="ButtonViewOpen" Header="Open" />
                <MenuItem Name="ButtonViewSave" Header="Save" />
                <MenuItem Name="ButtonViewNext" Header="Next" />
                <MenuItem Name="ButtonViewPrev" Header="Prev" />
                <MenuItem Name="ButtonViewClose" Header="Close" />
            </MenuItem>
            <MenuItem Name="ButtonAbout" Header="About" VerticalAlignment="Center"/>
        </Menu>
        <Border BorderThickness="0,0,0,1" Grid.Row="0" Grid.Column="3" BorderBrush="Black">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Background="White">
                <Separator Width="45" Background="Transparent"/>
                <Border x:Name="SystemButtonTray" CornerRadius="15,0,0,15" MouseEnter="SytemButton_MouseEnter" MouseLeave="SytemButton_MouseLeave" BorderThickness="0" Height="36" Background="WhiteSmoke" Width="50" VerticalAlignment="Center">
                    <TextBlock Text="--" HorizontalAlignment="Center" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" VerticalAlignment="Center"/>
                </Border>
                <Border x:Name="SystemButtonMaximize" BorderThickness="0" Height="36" MouseLeftButtonDown="SystemButtonMaximize_MouseLeftButtonDown" MouseEnter="SytemButton_MouseEnter" MouseLeave="SytemButton_MouseLeave" Background="WhiteSmoke" Width="50" VerticalAlignment="Center">
                    <TextBlock Text="❐" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border x:Name="SystemButtonClose" CornerRadius="0,15,15,0" MouseLeftButtonDown="SystemButtonClose_MouseLeftButtonDown" MouseEnter="SytemButton_MouseEnter" MouseLeave="SytemButton_MouseLeave" Background="WhiteSmoke" BorderThickness="0" Height="36" Width="50" VerticalAlignment="Center">
                    <TextBlock Text="X" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
        <TreeView x:Name="TreeView" Grid.Row="1" Grid.Column="3" Grid.RowSpan="4" Width="200" BorderThickness="1,0,0,0"
                  BorderBrush="Black">
            <TextBlock>Диаграмма</TextBlock>
        </TreeView>
        <TextBlock Grid.Row="1" Background="White" Height="25" Grid.Column="0" Grid.ColumnSpan="2" Width="220" Text="Элементы" FontSize="14" Padding="10,2"
                   Margin="1,1,1,0" />
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,1"/>
        <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0"/>
        <ScrollViewer Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Width="220" BorderThickness="0,0,1,0">
            <Grid x:Name="ElementsGrid" Width="200" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Background="Transparent" BorderThickness="0">
                    <Image Source="../Icons/Class_element_icon.png" Height="70" Width="70" />
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Background="Transparent" BorderThickness="0">
                    <Image Source="../Icons/NoteLink_icon.png" Height="70" Width="70" />
                </Button>
            </Grid>
        </ScrollViewer>
        <TextBlock Grid.Row="3" Background="White" Height="25" Grid.Column="0" Width="110" Text="Значения" FontSize="14" Padding="10,2"
                   Margin="1,1,1,0" />
        <Border Grid.Row="3" Grid.Column="0" BorderBrush="Black" BorderThickness="0,1,0,1"/>
        <TextBlock Grid.Row="3" Background="White" Height="25" Grid.Column="1" Width="110" Text="Свойства" FontSize="14" Padding="10,2"
                   Margin="1,1,1,0" />
        <Border Grid.Row="3" Grid.Column="1" BorderBrush="Black" BorderThickness="0,1,1,1"/>
        <Border Grid.Row="4" Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0"/>
        <ScrollViewer Grid.Row="4" Grid.Column="0" Width="220" BorderThickness="0,0,1,0">
            <Grid x:Name="OptionsGrid" Width="200" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
        <ScrollViewer Grid.Row="1" Grid.Column="2" Grid.RowSpan="4" HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto" AllowDrop="True">
            <Canvas x:Name="DrawCanvas" ScrollViewer.CanContentScroll="True" Background="White"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto" Width="2000" Height="2000">
                
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>