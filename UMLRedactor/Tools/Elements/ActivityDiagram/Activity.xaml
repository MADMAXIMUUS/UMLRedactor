<UserControl x:Class="UMLRedactor.Tools.Elements.ActivityDiagram.Activity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UMLRedactor.Tools.Elements"
             mc:Ignorable="d"
             Background="Transparent"
             Template="{StaticResource DesignerItemTemplate}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Background="White" BorderBrush="Black" BorderThickness="6" CornerRadius="15">
            <TextBlock Name="Title" Margin="5" VerticalAlignment="Center"
                     HorizontalAlignment="Center" Padding="10,2"
                     TextWrapping="Wrap"
                     Background="Transparent"
                     FontSize="16">
                Activity
            </TextBlock>
        </Border>
    </Grid>
</UserControl>