<UserControl x:Class="UMLRedactor.Tools.Elements.UseCaseDiagram.UseCase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="Transparent"
             Template="{StaticResource DesignerItemTemplate}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Ellipse StrokeThickness="1" Stroke="Black" Fill="White" />
        <TextBox Name="Title" Margin="5" VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center" Padding="10,2"
                 TextWrapping="Wrap"
                 Background="Transparent"
                 FontSize="16" BorderThickness="0" BorderBrush="Black">
            Use Case
        </TextBox>
    </Grid>
</UserControl>
